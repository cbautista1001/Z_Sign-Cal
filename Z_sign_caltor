
<!DOCTYPE html>
<html>
<head>
    <title>Astrological Sign Calculator</title>
    <script>
        function calculateAstrologicalSign() {
            var day = parseInt(document.getElementById("day").value);
            var month = parseInt(document.getElementById("month").value);
            var result = document.getElementById("result");

            if ((month == 1 && day >= 20) || (month == 2 && day <= 18)) {
                result.innerHTML = "Aquarius";
            } else if ((month == 2 && day >= 19) || (month == 3 && day <= 20)) {
                result.innerHTML = "Pisces";
            } else if ((month == 3 && day >= 21) || (month == 4 && day <= 19)) {
                result.innerHTML = "Aries";
            } else if ((month == 4 && day >= 20) || (month == 5 && day <= 20)) {
                result.innerHTML = "Taurus";
            } else if ((month == 5 && day >= 21) || (month == 6 && day <= 20)) {
                result.innerHTML = "Gemini";
            } else if ((month == 6 && day >= 21) || (month == 7 && day <= 22)) {
                result.innerHTML = "Cancer";
            } else if ((month == 7 && day >= 23) || (month == 8 && day <= 22)) {
                result.innerHTML = "Leo";
            } else if ((month == 8 && day >= 23) || (month == 9 && day <= 22)) {
                result.innerHTML = "Virgo";
            } else if ((month == 9 && day >= 23) || (month == 10 && day <= 22)) {
                result.innerHTML = "Libra";
            } else if ((month == 10 && day >= 23) || (month == 11 && day <= 21)) {
                result.innerHTML = "Scorpio";
            } else if ((month == 11 && day >= 22) || (month == 12 && day <= 21)) {
                result.innerHTML = "Sagittarius";
            } else if ((month == 12 && day >= 22) || (month == 1 && day <= 19)) {
                result.innerHTML = "Capricorn";
            } else {
                result.innerHTML = "Invalid date";
            }
        }
    </script>
</head>
<body>
    <h1>Astrological Sign Calculator</h1>
    <label for="day">Enter the day of your birth:</label>
    <input type="number" id="day" min="1" max="31">
    <br>
    <label for="month">Enter the month of your birth (as a number):</label>
    <input type="number" id="month" min="1" max="12">
    <br>
    <button onclick="calculateAstrologicalSign()">Calculate</button>
    <p id="result"></p>
</body>
</html>
